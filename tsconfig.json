{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "lib": ["es2018", "dom"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "module": "commonjs",
    "esModuleInterop": true,
    "types": ["node"]
  },
  "include": ["."]
}
